<label class="col-sm-4 col-md-3 col-lg-2 control-label">{{label}}</label>
<div class="col-sm-8 col-md-6">
{{#if isEditMode}}

    {{yield}}

{{else}}

  <p class="form-control-static">
    {{uc-words value}}
    
    {{#if showEditBtn}}
    <button type="button" class="btn btn-xs btn-link" {{action "enableEditMode"}} aria-label="Edit" title="Edit {{label}}">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    </button>
    {{/if}}
  </p>

{{/if}}
</div>
