{{#basic-card title="Add New Contact"}}

  {{#block-slot 'body'}}
  <div class="container-fluid xs-container">
    <div class="row">

      <section class="col-xs-12 col-sm-9 col-md-9">

        {{contact-editor 
            model=model 
            buttonTitle="Add Contact"
            isEditMode=true
            onContactSave='onContactSave'
            onCancel='onCancel'
        }}

      </section>

    </div>
  </div>
  {{/block-slot}}

{{/basic-card}}

{{!-- modal to handle transition confirmation --}}
{{#bs-modal-simple
  open=transitionModal
  title="Leave with Adding?"
  closeTitle="No"
  submitTitle="Yes"
  closeButton=false
  keyboard=false
  backdropClose=false
  onSubmit=(action continueTransition)
  onHidden=(action (mut transitionModal) false)
}}
  <p>
    <big>
      You haven't saved your contact yet. Do you want to discard it?
    </big>
  </p>
{{/bs-modal-simple}}
