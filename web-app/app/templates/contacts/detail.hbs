<section class="contact-card">

  <div class="page-header">

    <div class="btn-group pull-right">

      <button class="btn btn-danger" {{action "deleteContact" model}}>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remove
      </button>

      {{#link-to "contacts.edit" model class="btn btn-primary"}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Contact
      {{/link-to}}
    
    </div>

    <h2>{{model.displayName}}</h2>

  </div>

  <div class="container-fluid">
    <div class="row">

      <section class="col-sm-8 col-md-9">

        <form class="form-horizontal">

          {{#detail-item label="Name" value=model.name}}
            {{input type="text" class="form-control" value=model.name}}
          {{/detail-item}}

          {{occupation-picker occupation=model.occupation}}
          {{date-of-birth-picker date=model.dateOfBirth}}

        </form>
    
      </section>

    </div>
  </div>

</section>

{{outlet}}
