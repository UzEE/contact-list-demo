{{#basic-card title=model.displayName}}

  {{#block-slot 'action-buttons'}}
  <button class="btn btn-danger" {{action "deleteContact" model}}>
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remove
  </button>
  {{/block-slot}}

  {{#block-slot 'body'}}
  <div class="container-fluid">
    <div class="row">

      <section class="col-sm-4 col-md-3 pull-right">

        <div class="thumbnail">
          <img src="{{model.getAvatarUrl}}" title={{model.name}} />
          
        </div>

      </section>

      <section class="col-sm-8 col-md-9">

        {{contact-editor 
            model=model 
            allowEdit=true
            isEditMode=isEditMode
        }}
    
      </section>

    </div>
  </div>
  {{/block-slot}}

{{/basic-card}}


